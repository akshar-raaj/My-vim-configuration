set nocompatible

set number

set tabstop=4
set shiftwidth=4
set expandtab

set incsearch

set hlsearch

set nrformats=

set foldmethod=syntax

set ignorecase
set smartcase

set scrolloff=2

set autoindent
set copyindent

set nobackup
set noswapfile

nmap ,/ :nohlsearch<CR>

set splitright
set splitbelow

set pastetoggle=<F2>
